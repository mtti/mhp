{
  "name": "my-mhp-site",
  "private": true,
  "version": "0.0.1",
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-cli": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-node6": "11.0.0",
    "bootstrap": "3.3.7",
    "concurrently": "3.5.0",
    "copy-webpack-plugin": "4.2.0",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "html-webpack-plugin": "2.30.1",
    "less": "2.7.3",
    "less-loader": "4.0.5",
    "mkdirp": "0.5.1",
    "nodemon": "1.12.1",
    "raw-loader": "0.5.1",
    "uglify-js": "3.1.6",
    "watch": "1.0.2",
    "webpack": "3.8.1"
  },
  "scripts": {
    "build": "concurrently \"npm run build:client\" \"npm run build:site\"",
    "watch": "concurrently \"npm run watch:client\" \"npm run watch:site\" \"npm run serve\"",
    "serve": "mhp serve --verbose",
    "build:client": "webpack --bail",
    "build:site": "mhp --verbose --noclean=main.css,main.js",
    "watch:client": "webpack --watch",
    "watch:site": "watch \"npm run build:site\" . -d -u --ignoreDirectoryPattern=\"/node_modules|dist/\""
  }
}
