{
  "name": "my-mhp-site",
  "private": true,
  "version": "0.0.1",
  "devDependencies": {
    "autoprefixer": "8.0.0",
    "babel-cli": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-node6": "11.0.0",
    "bootstrap": "4.0.0",
    "concurrently": "3.5.1",
    "copy-webpack-plugin": "4.4.1",
    "css-loader": "0.28.10",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.9",
    "html-webpack-plugin": "2.30.1",
    "node-sass": "4.7.2",
    "sass-loader": "6.0.6",
    "mkdirp": "0.5.1",
    "nodemon": "1.15.1",
    "raw-loader": "0.5.1",
    "uglify-js": "3.3.12",
    "watch": "1.0.2",
    "webpack": "3.11.0"
  },
  "scripts": {
    "build": "concurrently \"npm run build:client\" \"npm run build:site\"",
    "watch": "concurrently \"npm run watch:client\" \"npm run watch:site\" \"npm run serve\"",
    "serve": "mhp serve --verbose",
    "build:client": "webpack --bail",
    "build:site": "mhp --verbose --keep=assets",
    "build:site:local": "mhp --verbose --keep=assets --localhost",
    "watch:client": "webpack --watch",
    "watch:site": "watch \"npm run build:site:local\" posts templates pages"
  }
}
