{
  "name": "@mtti/mhp",
  "version": "0.6.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "lib/index.js",
  "bin": {
    "mhp": "./lib/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map",
    "templates/**/*.html"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "3.0.0",
    "@types/cheerio": "0.22.22",
    "@types/express": "4.17.8",
    "@types/fs-extra": "9.0.2",
    "@types/jest": "26.0.15",
    "@types/luxon": "1.25.0",
    "@types/marked": "1.1.0",
    "@types/mime-types": "2.1.0",
    "@types/minimist": "1.2.0",
    "@types/nunjucks": "3.1.3",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "chokidar-cli": "2.1.0",
    "eslint": "7.12.1",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.1",
    "ts-jest": "26.4.2",
    "typescript": "4.0.3"
  },
  "dependencies": {
    "@mtti/funcs": "^2.2.0",
    "@mtti/lines": "^1.0.0",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "feed": "^4.2.1",
    "fs-extra": "^9.0.1",
    "luxon": "^1.25.0",
    "marked": "^1.2.2",
    "mime-types": "^2.1.27",
    "minimist": "^1.2.5",
    "nunjucks": "^3.2.2",
    "sanitize-filename": "^1.6.3",
    "slugify": "^1.4.5",
    "uuid": "^8.3.1",
    "yaml": "^1.10.0"
  }
}
