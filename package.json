{
  "name": "@mtti/mhp",
  "version": "0.7.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "lib/index.js",
  "bin": {
    "mhp": "./lib/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "generate:barrels": "node ./scripts/generate-barrels.js",
    "prebuild": "npm run generate:barrels",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "test:parallel": "node ./scripts/run-tests.js",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map",
    "templates/**/*.html"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "3.0.0",
    "@types/cheerio": "0.22.30",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.12",
    "@types/jest": "27.0.1",
    "@types/luxon": "2.0.3",
    "@types/marked": "3.0.0",
    "@types/mime-types": "2.1.1",
    "@types/minimist": "1.2.2",
    "@types/nunjucks": "3.1.5",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "chokidar-cli": "3.0.0",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.24.2",
    "jest": "27.1.1",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@mtti/funcs": "^2.2.0",
    "@mtti/lines": "^1.0.1",
    "cheerio": "^1.0.0-rc.10",
    "express": "^4.17.1",
    "feed": "^4.2.2",
    "fs-extra": "^10.0.0",
    "luxon": "^2.0.2",
    "marked": "^3.0.3",
    "mime-types": "^2.1.32",
    "minimist": "^1.2.5",
    "nunjucks": "^3.2.3",
    "sanitize-filename": "^1.6.3",
    "slugify": "^1.6.0",
    "uuid": "^8.3.2",
    "yaml": "^1.10.2"
  }
}
