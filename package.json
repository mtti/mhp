{
  "name": "@mtti/mhp",
  "version": "0.10.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=16"
  },
  "main": "lib/index.js",
  "bin": {
    "mhp": "./lib/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "generate:barrels": "node ./scripts/generate-barrels.js",
    "prebuild": "npm run generate:barrels",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "test:parallel": "node ./scripts/run-tests.js",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map",
    "templates/**/*.html"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "3.0.0",
    "@types/cheerio": "0.22.35",
    "@types/express": "4.17.21",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.5.11",
    "@types/luxon": "3.3.8",
    "@types/marked": "5.0.2",
    "@types/mime-types": "2.1.4",
    "@types/minimist": "1.2.5",
    "@types/nunjucks": "3.2.6",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "chokidar-cli": "3.0.0",
    "eslint": "8.56.0",
    "eslint-plugin-import": "2.29.1",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@mtti/funcs": "^2.3.0",
    "@mtti/lines": "^1.0.1",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2",
    "feed": "^4.2.2",
    "fs-extra": "^11.1.0",
    "highlight.js": "^11.9.0",
    "luxon": "^3.4.4",
    "marked": "^5.1.2",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.8",
    "nunjucks": "^3.2.4",
    "sanitize-filename": "^1.6.3",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  }
}
