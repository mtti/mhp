{
  "name": "@mtti/mhp",
  "version": "0.3.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "lib/index.js",
  "bin": {
    "mhp": "./lib/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map",
    "templates/**/*.html"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "2.0.0",
    "@types/cheerio": "0.22.16",
    "@types/express": "4.17.3",
    "@types/fs-extra": "8.1.0",
    "@types/jest": "25.1.3",
    "@types/luxon": "1.21.0",
    "@types/marked": "0.7.3",
    "@types/mime-types": "2.1.0",
    "@types/minimist": "1.2.0",
    "@types/nunjucks": "3.1.3",
    "@types/yaml": "1.2.0",
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "chokidar-cli": "2.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.1",
    "jest": "25.1.0",
    "ts-jest": "25.2.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@mtti/funcs": "^2.0.0",
    "@mtti/lines": "^1.0.0",
    "@types/uuid": "^7.0.0",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "feed": "^4.0.0",
    "fs-extra": "^8.1.0",
    "luxon": "^1.21.3",
    "marked": "^0.8.0",
    "mime-types": "^2.1.25",
    "minimist": "^1.2.0",
    "nunjucks": "^3.2.0",
    "sanitize-filename": "^1.6.3",
    "slugify": "^1.3.6",
    "uuid": "^7.0.0",
    "yaml": "^1.7.2"
  }
}
