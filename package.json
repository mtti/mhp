{
  "name": "@mtti/mhp",
  "version": "0.11.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20"
  },
  "main": "lib/index.js",
  "bin": {
    "mhp": "./lib/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "generate:barrels": "node ./scripts/generate-barrels.js",
    "prebuild": "npm run generate:barrels",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "test:parallel": "node ./scripts/run-tests.js",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map",
    "templates/**/*.html"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "4.0.1",
    "@types/cheerio": "0.22.35",
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.12",
    "@types/luxon": "3.4.2",
    "@types/marked": "5.0.2",
    "@types/mime-types": "2.1.4",
    "@types/minimist": "1.2.5",
    "@types/node": "20.11.24",
    "@types/nunjucks": "3.2.6",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "chokidar-cli": "3.0.0",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.29.1",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@mtti/funcs": "^2.3.0",
    "@mtti/lines": "^1.0.1",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.3",
    "feed": "^4.2.2",
    "fs-extra": "^11.2.0",
    "highlight.js": "^11.9.0",
    "luxon": "^3.4.4",
    "marked": "^12.0.0",
    "marked-gfm-heading-id": "^3.1.3",
    "marked-highlight": "^2.1.1",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.8",
    "nunjucks": "^3.2.4",
    "sanitize-filename": "^1.6.3",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "yaml": "^2.4.0"
  }
}
