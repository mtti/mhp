{
  "name": "@mtti/mhp",
  "version": "0.9.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14"
  },
  "main": "lib/index.js",
  "bin": {
    "mhp": "./lib/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "generate:barrels": "node ./scripts/generate-barrels.js",
    "prebuild": "npm run generate:barrels",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "test:parallel": "node ./scripts/run-tests.js",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map",
    "templates/**/*.html"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "3.0.0",
    "@types/cheerio": "0.22.31",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "28.1.7",
    "@types/luxon": "3.0.0",
    "@types/marked": "4.0.5",
    "@types/mime-types": "2.1.1",
    "@types/minimist": "1.2.2",
    "@types/nunjucks": "3.2.1",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "chokidar-cli": "3.0.0",
    "eslint": "8.22.0",
    "eslint-plugin-import": "2.26.0",
    "jest": "28.1.3",
    "ts-jest": "28.0.8",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@mtti/funcs": "^2.3.0",
    "@mtti/lines": "^1.0.1",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.1",
    "feed": "^4.2.2",
    "fs-extra": "^10.1.0",
    "luxon": "^3.0.1",
    "marked": "^4.0.18",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.6",
    "nunjucks": "^3.2.3",
    "sanitize-filename": "^1.6.3",
    "slugify": "^1.6.5",
    "uuid": "^8.3.2",
    "yaml": "^2.1.1"
  }
}
