{
  "name": "@mtti/mhp",
  "version": "0.2.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.15.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "tsc": "tsc"
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "1.0.0",
    "@types/cheerio": "0.22.13",
    "@types/fs-extra": "8.0.0",
    "@types/jest": "24.0.18",
    "@types/luxon": "1.15.2",
    "@types/marked": "0.6.5",
    "@types/mime-types": "2.1.0",
    "@types/nunjucks": "3.1.2",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "eslint": "6.4.0",
    "eslint-plugin-import": "2.18.2",
    "jest": "24.9.0",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "@mtti/funcs": "^2.0.0",
    "cheerio": "^1.0.0-rc.3",
    "feed": "^4.0.0",
    "front-matter": "^3.0.2",
    "fs-extra": "^8.1.0",
    "luxon": "^1.19.3",
    "marked": "^0.7.0",
    "mime-types": "^2.1.24",
    "nunjucks": "^3.2.0",
    "slugify": "^1.3.5"
  }
}
