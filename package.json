{
  "name": "@mtti/mhp",
  "version": "0.7.0",
  "description": "Static site generator",
  "repository": "github:mtti/mhp",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "lib/index.js",
  "bin": {
    "mhp": "./lib/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "generate:barrels": "node ./scripts/generate-barrels.js",
    "prebuild": "npm run generate:barrels",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "test:parallel": "node ./scripts/run-tests.js",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map",
    "templates/**/*.html"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "3.0.0",
    "@types/cheerio": "0.22.28",
    "@types/express": "4.17.11",
    "@types/fs-extra": "9.0.9",
    "@types/jest": "26.0.22",
    "@types/luxon": "1.26.3",
    "@types/marked": "2.0.1",
    "@types/mime-types": "2.1.0",
    "@types/minimist": "1.2.1",
    "@types/nunjucks": "3.1.4",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "chokidar-cli": "2.1.0",
    "eslint": "7.23.0",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.3",
    "ts-jest": "26.5.4",
    "typescript": "4.2.3"
  },
  "dependencies": {
    "@mtti/funcs": "^2.2.0",
    "@mtti/lines": "^1.0.1",
    "cheerio": "^1.0.0-rc.5",
    "express": "^4.17.1",
    "feed": "^4.2.2",
    "fs-extra": "^9.1.0",
    "luxon": "^1.26.0",
    "marked": "^2.0.1",
    "mime-types": "^2.1.29",
    "minimist": "^1.2.5",
    "nunjucks": "^3.2.3",
    "sanitize-filename": "^1.6.3",
    "slugify": "^1.5.0",
    "uuid": "^8.3.2",
    "yaml": "^1.10.2"
  }
}
